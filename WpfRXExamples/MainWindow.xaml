<Window x:Class="WpfRXExamples.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="617.227"
        Name="TestWindow"  FontSize="20"
        Topmost="True"
        >
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Click="FibonacciButton_Click">Fibonacci</Button>
        <Button Name="FibonacciButton" Grid.Row="1">Fibonacci RX</Button>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left">
            <Label Width="100">TextBox</Label>
            <TextBox Name="TextBox1" Width="508"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Left">
            <Label Width="100">Label1</Label>
            <Label Name="Label1" Width="505"/>
        </StackPanel>
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Left">
            <Label Width="100">Label2</Label>
            <Label Name="Label2" Width="506" FontSize="14"/>
        </StackPanel>

        <Button Name="ExitButton" Grid.Row="5">Exit</Button>
    </Grid>
</Window>
